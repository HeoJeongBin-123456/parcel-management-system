{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/vworld-proxy",
      "destination": "/api/vworld-proxy.js"
    },
    {
      "source": "/api/color-state",
      "destination": "/api/color-state.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=31536000"
        }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=31536000"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "regions": [
    "icn1"
  ],
  "functions": {
    "server.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/vworld-proxy.js": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/color-state.js": {
      "memory": 256,
      "maxDuration": 10
    }
  }
}